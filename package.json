{
  "name": "unitech-server",
  "version": "1.0.0",
  "description": "Backend server for Unitech Computers e-commerce platform",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "build": "npm install",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:ci": "NODE_ENV=test jest --coverage --forceExit",
    "lint": "eslint . --ext .js",
    "format": "prettier --write \"**/*.{js,json}\"",
    "security-check": "npm audit --production",
    "docker:build": "docker build -t unitech-server .",
    "docker:run": "docker run -p 5000:5000 unitech-server",
    "pm2:start": "pm2 start server.js --name unitech-server --time",
    "pm2:restart": "pm2 restart unitech-server",
    "pm2:stop": "pm2 stop unitech-server",
    "pm2:logs": "pm2 logs unitech-server"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-status-monitor": "^1.3.4",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "rotating-file-stream": "^3.2.7",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "stripe": "^14.9.0",
    "twilio": "^4.19.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "ecommerce",
    "backend",
    "nodejs",
    "postgresql"
  ],
  "author": "Unitech Computers",
  "license": "MIT"
}
